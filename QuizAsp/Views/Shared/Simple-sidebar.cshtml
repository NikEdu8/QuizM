@model List<QuizAsp.Entities.Test>

<body>
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        List of tests
                    </a>
                </li>
                @foreach (var test in Model)
                {
                    <li>
                        <a href="@Url.Action("Index", "Test", new { id = test.Id })">
                            @string.Format("{0} ({1})", test.Caption, test.Question.Count)
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</body>
